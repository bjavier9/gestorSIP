# Server Configuration
PORT=3000

# JWT Configuration
# It is highly recommended to use a long, complex, and randomly generated string for your JWT secret.
JWT_SECRET="your_super_secret_jwt_key"
JWT_EXPIRES_IN="24h"

# Google Generative AI API Key
# Get your key from Google AI Studio: https://makersuite.google.com/app/apikey
GEMINI_API_KEY="YOUR_GEMINI_API_KEY"

# Firebase Configuration
# This project uses a Firebase Service Account JSON key.
# 1. Go to your Firebase project settings -> Service accounts.
# 2. Click "Generate new private key".
# 3. Copy the entire content of the downloaded JSON file and paste it here as a single line string.
# Example: FIREBASE_SERVICE_ACCOUNT='{"type":"service_account", "project_id":"...", ...}'
FIREBASE_SERVICE_ACCOUNT=''
